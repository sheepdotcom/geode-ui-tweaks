{
	"geode": "4.1.2",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"id": "sheepdotcom.geode-ui-tweaks",
	"name": "Geode UI Tweaks",
	"version": "v0.2.0-alpha.2",
	"developer": "sheepdotcom",
	"description": "Tweak the Geode UI a bit more.",
	"tags": ["customization", "interface"],
	"links": {
		"source": "https://github.com/sheepdotcom/geode-ui-tweaks"
	},
	"settings": {
		"tl-title" : {
			"name": "Transparent Lists",
			"description": "Makes the mod list background transparent. Best used with geode theme enabled.",
			"type": "title"
		},
		"transparent-lists": {
			"name": "Enabled",
			"description": "Enables transparent mod list background.",
			"type": "bool",
			"default": false
		},
		"list-bg-transparency": {
			"name": "List Background Opacity",
			"description": "Change the opacity of the background behind the mod list.",
			"type": "int",
			"control": {"slider": true, "slider-step": 5, "arrows": true, "arrow-step": 5, "big-arrows": true, "big-arrow-step": 25, "input": true},
			"default": 100,
			"min": 0,
			"max": 255,
			"enable-if": "transparent-lists",
			"enable-if-description": "Enable transparent lists"
		},
		"tl-enabled-color": {
			"name": "Enabled Color",
			"type": "rgba",
			"default": [0, 0, 0, 50],
			"enable-if": "transparent-lists",
			"enable-if-description": "Enable transparent lists"
		},
		"tl-disabled-color": {
			"name": "Disabled Color",
			"type": "rgba",
			"default": [205, 205, 205, 50],
			"enable-if": "transparent-lists",
			"enable-if-description": "Enable transparent lists"
		},
		"tl-updates-available-color": {
			"name": "Updates Available Color",
			"type": "rgba",
			"default": [88, 202, 255, 80],
			"enable-if": "transparent-lists",
			"enable-if-description": "Enable transparent lists"
		},
		"tl-featured-color": {
			"name": "Featured Color",
			"type": "rgba",
			"default": [240, 211, 42, 80],
			"enable-if": "transparent-lists",
			"enable-if-description": "Enable transparent lists"
		},
		"tl-modtober-entry-color": {
			"name": "Modtober Entry Color",
			"type": "rgba",
			"default": [32, 102, 220, 80],
			"enable-if": "transparent-lists",
			"enable-if-description": "Enable transparent lists"
		},
		"tl-modtober-winner-color": {
			"name": "Modtober Winner Color",
			"type": "rgba",
			"default": [90, 65, 150, 144],
			"enable-if": "transparent-lists",
			"enable-if-description": "Enable transparent lists"
		},
		"tl-paid-color": {
			"name": "Paid Color",
			"type": "rgba",
			"default": [0, 255, 63, 80],
			"enable-if": "transparent-lists",
			"enable-if-description": "Enable transparent lists"
		},
		"tl-restart-required-color": {
			"name": "Restart Required Color",
			"type": "rgba",
			"default": [123, 156, 163, 80],
			"enable-if": "transparent-lists",
			"enable-if-description": "Enable transparent lists"
		},
		"tl-error-color": {
			"name": "Error Color",
			"type": "rgba",
			"default": [245, 27, 27, 80],
			"enable-if": "transparent-lists",
			"enable-if-description": "Enable transparent lists"
		},
		"tl-outdated-color": {
			"name": "Outdated Color",
			"type": "rgba",
			"default": [245, 153, 245, 80],
			"enable-if": "transparent-lists",
			"enable-if-description": "Enable transparent lists"
		},
		"tooltips-title": {
			"name": "Tooltips",
			"description": "Custom Tooltips (not) similar to minecraft",
			"type": "title"
		},
		"tooltips": {
			"name": "Enable",
			"description": "Global Toggle for Custom Tooltips",
			"type": "bool",
			"default": false
		},
		"tooltips-opacity": {
			"name": "Background Opacity",
			"description": "Change the opacity of the tooltip background",
			"type": "int",
			"control": {"slider": true, "slider-step": 5, "arrows": true, "arrow-step": 5, "big-arrows": true, "big-arrow-step": 25, "input": true},
			"default": 150,
			"min": 0,
			"max": 255,
			"enable-if": "tooltips",
			"enable-if-description": "Enable Tooltips"
		},
		"tooltips-mod-list-description": {
			"name": "Mod List Description",
			"description": "Display the description of a mod in the mod list",
			"type": "bool",
			"default": false,
			"enable-if": "tooltips",
			"enable-if-description": "Enable Tooltips"
		},
		"tooltips-mod-list-developers": {
			"name": "Mod List Developers",
			"description": "Display all the developers of a mod in the mod list",
			"type": "bool",
			"default": false,
			"enable-if": "tooltips",
			"enable-if-description": "Enable Tooltips"
		},
		"tooltips-developers-min-count": {
			"name": "Developer Min Count",
			"description": "Minimum amount of developers required to display the tooltip",
			"type": "int",
			"control": {"slider": true, "slider-step": 1, "arrows": true, "arrow-step": 1, "big-arrows": false},
			"default": 3,
			"min": 0,
			"max": 10,
			"enable-if": "tooltips-mod-list-developers",
			"enable-if-description": "Enable Mod List Developers"
		},
		"tooltips-tag-popup-description": {
			"name": "Mod Popup Tag Description",
			"description": "Display the description of a tag in the mod popup",
			"type": "bool",
			"default": false,
			"enable-if": "tooltips",
			"enable-if-description": "Enable Tooltips"
		},
		"misc-title": {
			"name": "Miscellaneous",
			"description": "Features that don't fit into any category.",
			"type": "title"
		},
		"larger-logos": {
			"name": "Larger Logos",
			"description": "Increases the size of the logos on mod items.",
			"type": "bool",
			"default": false
		},
		"fix-mod-info-size": {
			"name": "Fix Mod Info Size",
			"description": "Increases the width of the info container to extend all the way to the download count.",
			"type": "bool",
			"default": false
		},
		"dont-shorten-download-count": {
			"name": "Don't Shorten Download Count",
			"type": "bool",
			"default": false
		},
		"debug-title": {
			"name": "Debug",
			"description": "For debugging purposes only",
			"type": "title"
		},
		"debug-tooltips-draw": {
			"name": "Draw tooltip hover area",
			"description": "Show a rectange around the areas that would trigger a tooltip to be created",
			"type": "bool",
			"default": false
		}
	}
}
